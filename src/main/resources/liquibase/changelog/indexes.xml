<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
         http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="1" author="VladimirKozlov73">
        <preConditions onFail="MARK_RAN">
            <not>
                <indexExists pg_indexes="idx_student_name"/>
            </not>
        </preConditions>
        <createIndex indexname="idx_student_name" tableName="student">
            <column name="name"/>
        </createIndex>
    </changeSet>

    <changeSet id="2" author="VladimirKozlov73">
        <preConditions onFail="MARK_RAN">
            <not>
                <indexExists pg_indexes="idx_faculty_name_color"/>
            </not>
        </preConditions>
        <createIndex pg_indexes="idx_faculty_name_color" tableName="faculty">
            <column name="name"/>
            <column name="color"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>